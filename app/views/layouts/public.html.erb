                 </div>
             </div>
         </div>
         <!-------------------------------------------------------------------------------------------------->
         <div class="container-fluid">
             <div class="row" style="padding:10px 0px;">
                 <div class=" col-sm-2 col-xs-2">
                       <a href="/public"><%= image_tag("logo.png",  :class => 'img-responsive')%></a>
                 </div>
             <div class="col-md-7 col-sm-6 col-sm-offset-0 col-xs-10 search" style="padding-top:25px;">
                 <form class="navbar-form" role="search" action="/public/search" style="width:100%!important">
                <div class="input-group" style="width:100%!important;padding-left:100px;">
                  <input type="text" class="form-control" name="search" placeholder="Search" style="width:100%!important;" required="true">
                    <span class="input-group-btn">
                          <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
                         </span>
                    </div>
                  </form>
             </div>
                 <div class="col-lg-3 col-lg-offset-0 col-md-3 col-md-offset-0 col-sm-4 col-sm-offset-0 col-xs-12 social" style="padding-top:35px;">
                          <div class="col-sm-3 col-xs-12 so">
                          <a href="/public/cartview">
                          <button class="btn btn-sm" style="background:#3b5998;color:#fff;"><span class="glyphicon glyphicon-shopping-cart"></span> <span class="items">
                          <%= session[:cart_size] ? session[:cart_size].to_s + "" : "0" %></span></button></a>
                          </div>
                          <% if session[:email] %>
                          <div class="col-sm-4 col-xs-12 so">
                          <a href="/public/logout">
                          <button class="btn btn-sm" style="background:#3b5998;color:#fff;"><span class="glyphicon glyphicon-user"></span> <span class="items">
                            Logout</span></button>
                            </a>
                          </div>
                          <% else %>
                          <div class="col-sm-4 col-xs-12 so">
                          <a href="/public/login" style="color:#fff;text-decoration:none;">
                          <button class="btn btn-sm" style="background:#3b5998;color:#fff;"><span class="glyphicon glyphicon-user"></span> <span class="items">
                            Login</span></button>
                            </a>
                          </div>
                          <% end %>
                           <% if session[:email] %>
                            <% if @details %>
                              <div class="col-sm-4 col-xs-12 so">
                              <%= link_to '<button class="btn btn-sm" style="background:#3b5998;color:#fff;">View Profile</button>'.html_safe,:id=>@details.id,:controller=>'public',:action=>'editpdetail' %>
                              
                              </div>
                            <% else %>
                              <div class="col-sm-4 col-xs-12 so">
                              <a href="/public/personaldetails">
                              <button class="btn btn-sm" style="background:#3b5998;color:#fff;"><span class="glyphicon glyphicon-user"></span> <span class="items">View Profile</span></button>
                              </a>
                              </div>
                            <% end %>  
                          <% else %>
                            <div class="col-sm-4 col-xs-12 so">
                            <a href="/public/signup">
                            <button class="btn btn-sm" style="background:#3b5998;color:#fff;"><span class="glyphicon glyphicon-user"></span> <span class="items">SignUp</span></button>
                            </a>
                            </div>
                          <% end %> 
            </div>
             </div>
         </div>
         <!-------------------------------------------------------------------------------------------------->
         <div class="container-fluid" style="padding:0px;">
           <div class=" bar_container">
                <div class="bar one"></div>
                <div class="bar two"></div>
                <div class="bar three"></div>
           </div>
            <div class="col-sm-12 col-sm-offset-0 col-xs-3 col-xs-offset-5 nav" style="cursor:pointer;">
                   <span>
                    <ul>
                    <% @maincategory.each do |maincategory| %>
                       <li class="main"><%= maincategory.main_category.capitalize %>
                        <% if maincategory.category %>
                          <div class="menu">
                              <div class="menu1">
                                  <ul>
                                    <% if maincategory.category %>
                                      <% @category = Category.where("maincategory_id = #{maincategory.id} and is_active = '1'")%>
                                      <% @category.each do |category| %>
                                      <li><h5 style="border-bottom:1px solid rgba(0,0,0,0.3);"><%= category.category.capitalize %></h5>
                                        <% if category.subcategory %>
                                        <% @subcategory = Subcategory.where("category_id = #{category.id} and is_active = '1'")%>
                                          <% @subcategory.each do |subcategory| %>                                      
                                          <ul>                                                                        
                                              <li><%= link_to(subcategory.sub_category.capitalize,{:controller=>'public',:action=>'searchProducts',:id=>subcategory.id},style:'text-decoration:none;color:#fff;') %>                           </li>
                                          </ul>
                                         <% end %>
                                         <% end %> 
                                      </li>
                                      <% end %>  
                                    <% end %>    
                                      
                                  </ul>
                              </div>
                          </div>
                        <% end %>
                       </li>
                    <% end %>   
                    </ul>       
                  </span> 
                </div>
           </div>
          <%= yield %>
