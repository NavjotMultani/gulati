<!DOCTYPE html>
<html>
<head>
    <title><%= @page_title || "Index"%></title>
     <%= javascript_include_tag 'jquery','slider', 'data-turbolinks-track' => true %>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    
    <%= stylesheet_link_tag 'font-awesome.min','index','brands','p','cart','or','odetail','check1', 'wish',media:'all', 'data-turbolinks-track' => true %> 
    <script>
    $(document).ready(function(){
    $("li.main").click(function(){
    $("li.main").not(this).find(".menu1").hide(300);
    $(this).find(".menu1").toggle(300);
    });
    $(".bar_container").click(function(){
    $(".nav").slideToggle(800);
    });
    });
   
    </script>
</head>
<body>
     <div class="page-wrapper">
         <div class="container-fluid">
             <div class="row" style="background:#3b5998">
