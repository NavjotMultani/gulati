                              <i class="fa fa-user"></i>
                          <% end %>
                         <% else %>
                         <i class="fa fa-user"></i>
                         <% end %>
                     </div>
                     <div class="col-xs-9">
                        <% if session[:email] %>
                        <h5 style="padding-top:4px;color:#fff;">
                            <%= session[:email] %>
                        </h5>
                        <% else %>
                        <h5 style="padding-top:4px;color:#fff;">My Account</h5>
                        <% end %>
                     </div>
                 </div>
                 <div class="col-lg-3 col-lg-offset-3 col-md-3 col-md-offset-2 col-sm-4 col-sm-offset-1 col-xs-4 col-xs-offset-1">
                     <h5 style="font-style: italic;font-family:Times New Roman;color:#fff;">Free Shipping All Over The World </h5>
                 </div>
