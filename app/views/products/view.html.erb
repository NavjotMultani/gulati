<style type="text/css">
.color{
	width:55px;
	height:15px;
	margin: auto auto;
}
</style>
<div class="row">
    <div class="col-lg-6 col-lg-offset-3 col-md-1 col-md-offset-6 col-sm-2 col-sm-offset-6 col-xs-2 col-xs-offset-3">  
	  <table class="table table-hover table-bordered">
		<thead>
				<tr>
					<td>Subcategory</td>
					<td><%= @product.subcategory.sub_category %></td>
				</tr>	
				<tr>
					<td>Product Name</td>
					<td><%= @product.product_name %></td>
				</tr>
				<tr>
					<td>Product Code</td>
					<td><%= @product.product_code %></td>
				</tr>
				<tr>
					<td>Price</td>
					<td><i class="fa fa-inr"></i><%= @product.price %></td>
				</tr>
				<tr>
					<td>Color</td>
					<td>
						<div class="color" style="background:<%= @product.color %>" ></div>
					</td>
				</tr>
				<tr>
					<td>Size </td>
					<td><%= @product.size %></td>
				</tr>
				<tr>
					<td>Handling Charges </td>
					<td><%= @product.handling_charges %></td>
				</tr>
				<tr>
					<td>Material</td>
					<td><%= @product.material %></td>
				</tr>	
				<tr>
					<td> Pic</td>
					<td><%= image_tag("/uploads/"+@product.photo1,:size=>'50x50') %>
						<%= image_tag("/uploads/"+@product.photo2,:size=>'50x50') %>
					</td>
				</tr>
		</thead>
	<%= button_to('Back to view page', :action=>'show')  %>
	</table>
</div>
</div>